<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_facebook_tracking_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.facebook.tracking</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='webmaster_settings']" position="after">
                <h2>Server Side Tracking</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label string="Pixel Id" for="pixel"/>
                            <div class="text-muted">
                                Meta Pixel Id
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="pixel" class="o_light_label" attrs="{'required': [('access_token', '!=', '')]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label string="Access Token" for="access_token"/>
                            <div class="text-muted">
                               Meta Access Token
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="access_token" class="o_light_label" attrs="{'required': [('pixel', '!=', '')]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_test"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="is_test" for="is_test"/>
                            <div class="text-muted">
                                Run in Test Mode
                            </div>
                            <div class="content-group" attrs="{'invisible': [('is_test', '=', False)]}">
                                <div class="row mt16" id="mail_twilio_sid">
                                    <label for="test_event_code" class="col-lg-3"/>
                                    <field name="test_event_code" placeholder="e.g. TEST5241"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>